@model Project

@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToShortDateString()</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToShortDateString()</dd>

        <dt class="col-sm-2">Ended At</dt>
        <dd class="col-sm-10">
            @(Model.EndedAt.HasValue ? Model.EndedAt.Value.ToShortDateString() : "N/A")
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.ProjectId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

</div>
@section Scripts {
Html.RenderPartialAsync("_ValidationScriptsPartial");
}